{
  // Workbench
  "workbench.colorTheme": "Min Dark",
  "workbench.iconTheme": "symbols",
  "workbench.activityBar.location": "top",
  "workbench.statusBar.visible": false,
  "workbench.layoutControl.enabled": false,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.labelFormat": "short",
  "window.menuBarVisibility": "compact",
  "window.commandCenter": false,
  // Editor
  "editor.fontFamily": "JetBrains Mono",
  "editor.fontLigatures": true,
  "editor.fontSize": 11,
  "editor.lineHeight": 1.5,
  "editor.cursorStyle": "underline",
  "editor.cursorBlinking": "smooth",
  "editor.renderLineHighlight": "gutter",
  // "editor.formatOnSave": true,
  "editor.foldingHighlight": false,
  "editor.minimap.enabled": true,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.size": "fit",
  "editor.minimap.scale": 1,
  "editor.minimap.autohide": "none",
  "editor.minimap.showSlider": "mouseover",
  "editor.minimap.maxColumn": 70,
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.horizontal": "hidden",
  // Explorer
  "explorer.compactFolders": false,
  "explorer.fileNesting.enabled": true,
  "breadcrumbs.enabled": false,
  // Terminal
  "terminal.integrated.fontFamily": "Cascadia Mono",
  "terminal.integrated.fontSize": 11.5,
  "terminal.integrated.gpuAcceleration": "auto",
  // "terminal.integrated.fontWeight": "400",
  "terminal.integrated.cursorStyle": "block",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorWidth": 0.5,
  "terminal.integrated.cursorStyleInactive": "none",
  "terminal.integrated.env.windows": {},
  "terminal.integrated.fontLigatures.enabled": false,
  // Lint
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[plaintext]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.autopep8"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "prettier.semi": false
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // Configurações globais do Prettier
  "prettier.semi": false,
  "prettier.singleQuote": true
}
